\begin{code}
{-# OPTIONS -Wall #-}
module CompressCommand () where

import Command
import File

data CompressCommand = CompressCommand {getFile :: File}
instance Executable CompressCommand where
  execute (CompressCommand file) = compress file

\end{code}
// CompressCommand.class.php
<?php
require_once 'Command.class.php';
require_once 'File.class.php';
?>
<?php
/**
 * ConcreteCommandクラスに相当する
 */
class CompressCommand implements Command {
    private $file;
    public function __construct(File $file) {
        $this->file = $file;
    }
    public function execute() {
        $this->file->compress();
    }
}
?>