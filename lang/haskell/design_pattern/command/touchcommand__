\begin{code}
{-# OPTIONS -Wall #-}
module TouchCommand () where

import Command
import File

data TouchCommand = TouchCommand {getFile :: File}
instance Executable TouchCommand where
  execute (TouchCommand file) = create file

\end{code}
// TouchCommand.class.php
<?php
require_once 'Command.class.php';
require_once 'File.class.php';
?>
<?php
/**
 * ConcreteCommandクラスに相当する
 */
class TouchCommand implements Command {
    private $file;
    public function __construct(File $file) {
        $this->file = $file;
    }
    public function execute() {
        $this->file->create();
    }
}
?>