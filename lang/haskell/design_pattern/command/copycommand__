\begin{code}
{-# OPTIONS -Wall #-}
module CopyCommand () where

import Command
import File

data CopyCommand = CopyCommand {getFile :: File}
instance Executable CopyCommand where
  execute (CopyCommand (File fileName)) = create $ File $ "copy_of_" ++ fileName

\end{code}
// DecompressCommand.class.php
<?php
require_once 'Command.class.php';
require_once 'File.class.php';
?>
<?php
/**
 * ConcreteCommandクラスに相当する
 */
class DecompressCommand implements Command {
    private $file;
    public function __construct(File $file) {
        $this->file = $file;
    }
    public function execute() {
        $this->file->decompress();
    }
}
?>